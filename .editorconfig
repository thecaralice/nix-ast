root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true

# fuck yaml
[{*.{yml,yaml},.clang-format}]
indent_style = space
indent_size = 2

# nix does not support indentation tabs, see NixOS/nix#9971
[*.nix]
indent_style = space
indent_size = 2

# autogenerated
[flake.lock]
indent_style = space
indent_size = 2
